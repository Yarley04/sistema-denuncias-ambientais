<div class="secao container-cadastroLogin-agente">
    <div class="card cadastroLogin-agente">
        <div class="card-body">
            <form action="/agente/login" method="POST">
                <div class="mb-3">
                    <label for="cpf">CPF</label>
                    <input maxlength="14" type="text" name="cpf" id="cpf" class="form-control"
                        placeholder="000.000.000-00" required>
                </div>

               <div class="mb-3">
                    <label class="mb-2" for="senha">Senha</label>
                    <input type="password" name="senha" id="senha" class="form-control" required>
                </div>
                
                <div class="mb-3 cadastroLogin-agente-botao">
                    <button type="submit" class="btn btn-success">Entrar</button>
                </div>
                <a href="/agente/enviar-codigo-verificacao">Esqueceu sua senha?</a>
            </form>
        </div>
    </div>
</div>