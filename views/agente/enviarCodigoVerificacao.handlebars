<div class="secao container-cadastroLogin-agente">
     <h4>Recuperar Senha</h4>
    <div class="card cadastroLogin-agente">
        <div class="card-body">
            <form action="/agente/gerar-codigo-verificacao" method="POST">
                <div class="mb-3">
                    <label for="cpf">CPF</label>
                    <input maxlength="14" type="text" name="cpf" id="cpf" class="form-control"
                        placeholder="000.000.000-00" required>
                </div>
                <div class="mb-3">
                    <label class="mb-2" for="email">E-mail</label>
                   <input type="email" name="email" placeholder="Digite seu e-mail" id="email" class="form-control" required>
                </div>
                <div class="mb-3 cadastroLogin-agente-botao">
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>