<div class="secao container-cadastroLogin-agente">
  <div class="card cadastroLogin-agente">
    <div class="card-body">
      <form action="/agente/verificar-codigo" method="POST">
        <div class="mb-3">
          <label for="cpf">CPF</label>
          <input maxlength="14" type="text" name="cpf" id="cpf" class="form-control" placeholder="000.000.000-00"
            required>
        </div>
        <div class="mb-3">
          <label for="token" class="form-label">Código de verificação</label>
          <input type="text" name="token" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="novaSenha" class="form-label">Nova Senha</label>
          <input type="password" name="novaSenha" class="form-control" required>
        </div>
        <div class="mb-3 cadastroLogin-agente-botao">
          <button type="submit" class="btn btn-primary">Redefinir senha</button>
        </div>
      </form>
    </div>
  </div>
</div>